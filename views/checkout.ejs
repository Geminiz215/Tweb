    <body>
        <div class="card">
          <div class="leftside">
            <img
              src="/static/images/eiliv-sonas-aceron-ZuIDLSz3XLg-unsplash.jpg"
              class="product"
            />
          </div>
          <div class="rightside">
            <form action="/pesan" method="POST">
              <h1>CheckOut</h1>
              <h2>Payment Information</h2>
              <p>Email</p>
              <input 
              id="Email"
              name="Email"
              class="inputbox"
              type="email" required />
              <p>Jumlah item</p>
              <input
                type="number"
                class="inputbox"
                name="Jumlah"
                id="card_number"
                required
              />
    
              <p>jenis menu</p>
              <select class="inputbox" name="option" id="card_type" required>
              <% result.forEach(result => { %>
                  <option value="<%= result.kode %>"><%= result.menu %> </option>
              <% }) %>
              </select>
    
              <p>Notes</p>
              <input type="text" class="inputbox" name="Notes" required />
    
    
